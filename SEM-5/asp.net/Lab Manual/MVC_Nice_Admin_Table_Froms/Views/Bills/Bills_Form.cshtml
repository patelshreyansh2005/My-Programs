@model BillsModel
<form>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row mb-3">
        <input type="hidden" asp-for="BillID" />
        <label for="inputEmail3" class="col-sm-2 col-form-label">Bill Number</label>
        <div class="col-sm-10">
            <input type="datetime" class="form-control" id="inputText" asp-for="BillNumber">
            <span asp-validation-for="BillNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
      
        <label for="inputEmail3" class="col-sm-2 col-form-label">Home Address</label>
        <div class="col-sm-10">
            <input type="datetime" class="form-control" id="inputText" asp-for="HomeAddress">
            <span asp-validation-for="HomeAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Bill Date</label>
        <div class="col-sm-10">
            <input type="datetime" class="form-control" id="inputText" asp-for="BillDate">
            <span asp-validation-for="BillDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Order ID</label>
        <div class="col-sm-10">
            <div class="col-sm-10">
                <select class="form-select form-select-sm" aria-label=".form-select-sm example" asp-for="OrderID">
                    <option selected>Select Order</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                <!--<input type="text" class="form-control" id="inputText">-->
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Total Amount</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputText" asp-for="TotalAmount">
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Discount</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputText" asp-for="Discount">
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">NetAmount</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputText" asp-for="NetAmount">
            <span asp-validation-for="NetAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">User ID</label>
        <div class="col-sm-10">
            <div class="col-sm-10">
                <select class="form-select form-select-sm" aria-label=".form-select-sm example" asp-for="UserID">
                    <option selected>Select User</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                <!--<input type="text" class="form-control" id="inputText">-->
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary" asp-action="BillsSave">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}