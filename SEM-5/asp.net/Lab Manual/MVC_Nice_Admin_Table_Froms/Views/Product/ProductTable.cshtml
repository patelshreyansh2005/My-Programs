@model DataTable;
@using System.Data;

<div class="card">
    <div class="card-body">
        <table>
            <tr>
                <td><h5 class="card-title">Product Table</h5></td>
                <td>
                    <div class="ps-5">
                        <a asp-controller="Product" asp-action="ProductForm"><button type="button" class="btn btn-success">Add</button></a>
                        <a asp-controller="Product" asp-action="CreateExcelFile"><button type="button" class="btn btn-success">Export to Excel</button></a>
                    </div>
                </td>
            </tr>
        </table>

        <span class="text-danger">@TempData["ErrorMessage"]</span>
        <!-- Default Table -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Product ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Product Price</th>
                    <th scope="col">Product Code</th>
                    <th scope="col">Description</th>
                    <th scope="col">User Name</th>
                </tr>
            </thead>
            <tbody>

                @foreach (DataRow product in Model.Rows)
                {
                    <tr>

                        <th scope="row">@product["ProductID"]</th>
                        <td>@product["ProductName"]</td>
                        <td>@product["ProductPrice"]</td>
                        <td>@product["ProductCode"]</td>
                        <td>@product["Description"]</td>
                        <td>@product["UserName"]</td>
                        <td>
                            <a asp-controller="Product" asp-action="ProductForm"><button type="button" class="btn btn-primary">Edit</button></a>
                        </td>
                        <td>
                            <a asp-controller="Product" asp-action="ProductDelete" asp-route-ProductID="@product["ProductID"]" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
        <!-- End Default Table Example -->
    </div>
</div>