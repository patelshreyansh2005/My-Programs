@model Project_1.Models.ProductModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add Project</h5>

        <form asp-action="ProductSave" method="post" class="row g-3">

            <input type="hidden" name="ProductID" asp-for="ProductID" />

            <div class="col-6">
                <label asp-for="ProductName" class="form-label"></label>
                <input type="text" class="form-control" asp-for="ProductName" placeholder="Enter Product Name">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="ProductPrice" class="form-label"></label>
                <input type="number" class="form-control" asp-for="ProductPrice" placeholder="Enter Product Price">
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="ProductCode" class="form-label"></label>
                <input type="text" class="form-control" asp-for="ProductCode" placeholder="Enter Product Code">
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            
            <div class="col-6">
                <label asp-for="UserID" class="form-label"></label>
                <select class="form-select" asp-for="UserID" asp-items="@(new SelectList(ViewBag.userList, "UserID", "UserName"))">
                    <option value="">Select User</option>
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea type="text" rows="5" class="form-control" asp-for="Description" placeholder="Enter Product Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>

        </form>

    </div>
</div>
