@model DataTable;
@using System.Data;

<div class="card">
    <div class="card-body">
        <table>
            <tr>
                <td><h5 class="card-title">Order Table</h5></td>
                <td>
                    <div class="ps-5">
                        <a asp-controller="Order" asp-action="Order_Form"><button type="button" class="btn btn-success">Add</button></a>
                    </div>
                </td>
            </tr>
        </table>

        <!-- Default Table -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Customer ID</th>
                    <th scope="col">Payment Mode</th>
                    <th scope="col">Total Amount</th>
                    <th scope="col">Shipping Address</th>
                    <th scope="col">User ID</th>
                </tr>
            </thead>
            <tbody>

                @foreach (DataRow order in Model.Rows)
                {
                    <tr>
                        <th scope="row">@order["OrderID"]</th>
                        <td>@order["OrderDate"]</td>
                        <td>@order["CustomerName"]</td>
                        <td>@order["PaymentMode"]</td>
                        <td>@order["TotalAmount"]</td>
                        <td>@order["ShippingAddress"]</td>
                        <td>@order["UserName"]</td>
                        <td>
                            <a asp-controller="Order" asp-action="Order_Form"><button type="button" class="btn btn-primary">Edit</button></a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
        <!-- End Default Table Example -->
    </div>
</div>